# Environment Configuration for authModule

# Security Settings
COOKIE_SECURE=false  # Set to 'true' in production (requires HTTPS)
FRONTEND_URL=http://localhost:3000  # Update to your frontend URL in production

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=supersecret
JWT_REFRESH_SECRET=refreshsecret

# Database Configuration
DATABASE_URI=postgresql://postgres:1234@localhost:5432/localstoragedb

# Application Settings
DEBUG=true
SECRET_KEY=your_secret_key

# Public Key Path
PUBLIC_KEY_PATH=keys/public_2025.pem

